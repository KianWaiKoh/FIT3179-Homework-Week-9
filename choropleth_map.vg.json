{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Dengue Disease by States in Malaysia (2019)",
    "fontSize": 16,
    "subtitle": "Note: Kuala Lumpur and Putrajaya share the same data values",
    "subtitleFontSize": 11,
    "subtitleFontStyle": "italic",
    "subtitleColor": "gray"
  },
  "width": 800,
  "height": 400,
  "projection": { "type": "equirectangular" },
  "data": {
    "url": "ne_10m_admin_1_states_provinces.json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "transform": [
    {
      "calculate": "datum.properties.name == 'Putrajaya' ? 'Kuala Lumpur' : datum.properties.name",
      "as": "normalized_name"
    },
    {
      "lookup": "normalized_name",
      "from": {
        "data": {
          "url": "Dengue_Malaysia.csv"
        },
        "key": "States",
        "fields": ["Cases", "Year", "Population"]
      }
    },
    {
      "filter": "datum.Year == 2019"
    },
    {
      "calculate": "datum.Cases / datum.Population * 10000",
      "as": "Cases per 10,000 Population"
    }
  ],
  "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 0.5 },
  "encoding": {
    "color": {
      "field": "Cases per 10,000 Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [10, 20, 100],
        "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#cb181d"]
      },
      "legend": { "title": "Cases per 10,000 Population" }
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "State" },
      { "field": "Cases", "type": "quantitative" },
      { "field": "Year", "type": "quantitative" },
      {
        "field": "Cases per 10,000 Population",
        "type": "quantitative",
        "format": ".2f"
      }
    ]
  }
}
